@model List<EAD_Project_Bootstrap.Models.Ad>



<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Modern Business - Start Bootstrap Template</title>
    <!-- Bootstrap Core CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="~/Content/modern-business.css" rel="stylesheet">
    <!-- Custom Fonts -->
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" type="text/css">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="../Home/Index">Selling Point</a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="../Home/Index#aboutMe">About</a>
                    </li>
                    <li @*class="active"*@>
                        <a href="#d1">Active Ads</a>
                    </li>
                    <li>
                        <a href="#d1">Ads Requests</a>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>
    <!-- Page Content -->
    <div class="container">
        <!-- Page Heading/Breadcrumbs -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Admin Panel</h1>
                <ol class="breadcrumb">
                    <li>
                        @*<a href="../Home/Index">Home</a>*@
                        @Html.ActionLink("Home","../Home/Index")
                    </li>
                    <li class="active">Admin Panel</li>
                </ol>
                <ol class="breadcrumb">                    
                    
                        <div class="row">
                           
                            <div class="col-md-4"></div>

                            <div class="col-md-4">
                                <a class="btn btn-lg btn-success btn-block">Total Traffic => @Session["traffic"]</a>
                            </div>
                            <div class="col-md-4"></div>
                        </div>
                    
                </ol>
            </div>
        </div>
        <!-- /.row -->
        
       
        <!-- /.row -->
        <!-- Service Panels -->
        <!-- The circle icons use Font Awesome's stacked icon classes. For more information, visit http://fontawesome.io/examples/ -->
        <div class="row">
            <div class="col-lg-12">
                <h2 class="page-header">Admin Options</h2>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="panel panel-default text-center">
                    <div class="panel-heading">
                        <span class="fa-stack fa-5x">
                            <i class="fa fa-circle fa-stack-2x text-primary"></i>
                            <i class="fa fa-paper-plane fa-stack-1x fa-inverse"></i>
                        </span>
                    </div>
                    <div class="panel-body">
                        @*<h4>Active Ads</h4>
                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit.</p>*@
                        <a href="#d1" class="btn btn-primary">Active Ads</a>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="panel panel-default text-center">
                    <div class="panel-heading">
                        <span class="fa-stack fa-5x">
                            <i class="fa fa-circle fa-stack-2x text-primary"></i>
                            <i class="fa fa-mail-reply fa-stack-1x fa-inverse"></i>
                        </span>
                    </div>
                    <div class="panel-body">
                        @*<h4>Ads Requests</h4>
                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit.</p>*@
                        <a href="#d1" class="btn btn-primary">Ads Requests</a>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="panel panel-default text-center">
                    <div class="panel-heading">
                        <span class="fa-stack fa-5x">
                            <i class="fa fa-circle fa-stack-2x text-primary"></i>
                            <i class="fa fa-home fa-stack-1x fa-inverse"></i>
                        </span>
                    </div>
                    <div class="panel-body">
                        @*<h4>Visit Client Home</h4>
                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit.</p>*@
                        <a href="~/Home/Index" class="btn btn-primary">Visit Client Home</a>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="panel panel-default text-center">
                    <div class="panel-heading">
                        <span class="fa-stack fa-5x">
                            <i class="fa fa-circle fa-stack-2x text-primary"></i>
                            <i class="fa fa-male fa-stack-1x fa-inverse"></i>
                        </span>
                    </div>
                    <div class="panel-body">
                       
                        <a href="~/Home/Index#aboutMe" class="btn btn-primary">About me</a>
                    </div>
                </div>
            </div>
        </div>
        <!-- Service Tabs -->
        <div class="row">
            <div class="col-lg-12">
                <h2 id="d1" class="page-header">Website Data</h2>
            </div>
            <div class="col-lg-12">
                <ul id="myTab" class="nav nav-tabs nav-justified">
                    <li class="active">
                        <a href="#service-one" data-toggle="tab"><i class="fa fa-paper-plane"></i> Active Ads</a>
                    </li>
                    <li class="">
                        <a href="#service-two" data-toggle="tab"><i class="fa fa-mail-reply"></i> Ads Requests</a>
                    </li>
                    @*<li class="">
                        <a href="#service-three" data-toggle="tab"><i class="fa fa-home"    ></i> Service Three</a>
                    </li>
                    <li class="">
                        <a href="#service-four" data-toggle="tab"><i class="fa fa-male"></i> Service Four</a>
                    </li>*@
                </ul>
                <div id="myTabContent" class="tab-content">
                    <div class="tab-pane fade active in" id="service-one">
                        <br/>
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th class="col-lg-1 ">User Name</th>
                                    <th class="col-lg-1 ">Title</th>
                                    <th class="col-lg-2 ">Description</th>
                                    <th class="col-lg-1 ">Price</th>
                                    <th class="col-lg-1 ">Mobile #</th>
                                    <th class="col-lg-1 ">Email</th>
                                    <th class="col-lg-1 ">City</th>
                                    <th class="col-lg-1 ">State</th>
                                    <th class="col-lg-2 ">Delete Button</th>
                                </tr>
                            </thead>

                            <tbody>
                                
                            @foreach(var a in Model)
                            {
                                if(a.AddedOrNot == 1)
                                {
                                    <tr>
                                        <td>@a.User.Username</td>
                                        <td>@a.Title</td>
                                        <td>@a.Description</td>
                                        <td>@a.Price</td>
                                        <td>@a.MobileNo</td>
                                        <td>@a.Email</td>
                                        <td>@a.City</td>
                                        <td>@a.State</td>
                                        <td><a href="~/Admin/DeleteAd/@a.AdId" class="col-lg-6 btn btn-danger">Delete</a></td>
                                    </tr> 
                                }  
                            }
                            </tbody>


                        </table>
                    </div>
                    <div class="tab-pane fade" id="service-two">
                        
                        <br />
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th class="col-lg-1 ">User Name</th>
                                    <th class="col-lg-1 ">Title</th>
                                    <th class="col-lg-1 ">Description</th>
                                    <th class="col-lg-1 ">Price</th>
                                    <th class="col-lg-1 ">Mobile #</th>
                                    <th class="col-lg-1 ">Email</th>
                                    <th class="col-lg-1 ">City</th>
                                    <th class="col-lg-1 ">State</th>
                                    <th class="col-lg-2 ">Add Button</th>
                                    <th class="col-lg-2 ">Delete Button</th>
                                </tr>   
                            </thead>

                            @foreach (var a in Model)
                            {
                                if(a.AddedOrNot == 0)
                                {
                                <tr>
                                    <td>@a.User.Username</td>
                                    <td>@a.Title</td>
                                    <td>@a.Description</td>
                                    <td>@a.Price</td>
                                    <td>@a.MobileNo</td>
                                    <td>@a.Email</td>
                                    <td>@a.City</td>
                                    <td>@a.State</td>
                                    <td><a href="~/Admin/AddAd/@a.AdId" class="col-lg-6 btn btn-success">Add</a></td>
                                    <td><a href="~/Admin/DeleteAd/@a.AdId" class="col-lg-6 btn btn-danger">Delete</a></td>
                                </tr>
                                }
                            }


                            

                            
                        </table>
                    </div>
                    
                </div>
            </div>
        </div>
        
        
        <!-- Footer -->
        @*<footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; Taha Muhammad 2015</p>
                </div>
            </div>
        </footer>*@
    </div>
    <!-- /.container -->
    <!-- jQuery -->
    <script src="~/Scripts/jquery.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="~/Scripts/bootstrap.min.js"></script>
    <!-- Script to Activate the Carousel -->
    <script>
        $('.carousel').carousel({
            interval: 5000 //changes the speed
        })
    </script>
</body>
</html>