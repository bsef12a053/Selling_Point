        <!-- /.row -->
        <!-- Content Row -->
        <div class="row">
            <!-- Map Column -->
            <div class="col-md-8 col-sm-push-3">
                <div class="row">
                    <div class="col-md-8">
                        <h3></h3>
                        <form name="sentMessage" enctype="multipart/form-data" action="../../Poster/PostAdSubmit/@ViewBag.id" method="post" id="contactForm" novalidate>
                            <div class="control-group form-group">
                                <div class="controls">
                                    @*<label>Title:</label>*@
                                    @Html.Label("Title:")

                                    <input type="text" class="form-control" name="Title" id="title1" required data-validation-required-message="Please enter your name.">
                                    <p class="help-block"></p>
                                </div>
                            </div>
                            <div class="control-group form-group">
                                <div class="controls">
                                    
                                    @Html.Label("Category:")
                                    
                                    <select name="Category" class="form-control">
                                        <option value="Mobile">Mobile</option>
                                        <option value="Laptop">Laptop</option>
                                        <option value="Books">Books</option>
                                        <option value="House">House</option>
                                        <option value="Car">Car</option>
                                        <option value="Motor Bike">Motor Bike</option>
                                    </select>
                                </div>
                            </div>

                            <div class="control-group form-group">
                                <div class="controls">
                                    @*<label>Description:</label>*@
                                    @Html.Label("Description:")
                                    <input type="text" class="form-control" name="Description" id="desc1" >
                                    <p class="help-block"></p>
                                </div>
                            </div>
                            <div class="control-group form-group">
                                <div class="controls">
                                    @*<label>Price:</label>*@
                                    @Html.Label("Price:")
                                    @Html.TextBox("Price", "", new { @class = "form-control",@typeof="tel"})
                                    @*<input type="tel" class="form-control" name="Price" id="price1" >*@
                                </div>
                            </div>



                            <div class="control-group form-group">
                                <div class="controls">
                                    @*<label>Mobile #</label>*@
                                    @Html.Label("Mobile #")
                                    @*<input type="text" class="form-control" name="MobileNo" id="mob1">*@
                                    @Html.TextBox("MobileNo", "", new { @class =  "form-control" })
                                    <p class="help-block"></p>
                                </div>
                            </div>
                            <div class="control-group form-group">
                                <div class="controls">
                                    @*<label>Email:</label>*@
                                    @Html.Label("Email:")
                                    @*<input type="tel" class="form-control" name="Email" id="email1" >*@
                                    @Html.TextBox("Email", "", new { @class = "form-control" })
                                </div>
                            </div>
                            <script>
                                function funct() {



                                    //var x = $('#stateSelector').val();
                                    var x = document.getElementById("stateSelector").selectedIndex;
                                    
                                    //$('#citySelector').remove();
                                    $('#citySelector').empty();
                                    
                                    
                                    $.getJSON('/Admin/GetCities?stateID=' + (x+1), function (d) {
                                        var x = d[0];
                                        //alert(d);
                                        for (var i = 1 ; i < x ; i++) {
                                            
                                            
                                            $('#citySelector').append("<option value=" + d[i] + ">" + d[i] + "</option>");
                                            
                                        
                                        }
                                    });
                                 
                                }



                            </script>
                            <div class="control-group form-group">
                                <div class="controls">
                                    
                                    @Html.Label("State:")
                                    
                                    <select name="State" onchange="funct()" id="stateSelector" class="form-control">
                                        <option id="1" value="Punjab">Punjab</option>
                                        <option id="2" value="Sindh">Sindh</option>
                                        <option id="3" value="KPK">Khyber Pakhtunkhwa</option>
                                        <option id="4" value="Balochistan">Balochistan</option>
                                    </select>
                                    @*@Html.TextBox("State", "", new { @class = "form-control" })*@
                                    
                                </div>
                            </div>
                            <div class="control-group form-group">
                                <div class="controls">
                                    
                                    @Html.Label("City:")
                                    
                                    @*@Html.TextBox("City", "", new { @class = "form-control" })*@
                                    <select name="City" id="citySelector" class="form-control">
                                        <option value="Lahore">Lahore</option>
                                        <option value="Faisalabad">Faisalabad</option>
                                        <option value="Rawalpindi">Rawalpindi</option>
                                        @*<option value="Multan">Multan</option>
                                        <option value="Gujranwala">Gujranwala</option>*@
                                    </select>
                                </div>
                            </div>
                            <div class="control-group form-group">
                                <div class="controls">
                                    @*<label>Upload Image:</label>*@
                                    @Html.Label("Upload Image:")
                                    <input type="file" name="picture" id="pass1" >
                                </div>
                            </div>




                            <div id="success"></div>
                            <!-- For success/fail messages -->
                            <button type="submit" id="postBtn1" class="btn btn-block">Post Ad</button>
                        </form> 
                    </div>
                </div>
            </div>
